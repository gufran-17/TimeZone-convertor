pipeline {
    agent my-jenkins-learning

    stages {
        stage('Clone from GitHub') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/gufran-17/TimeZone-convertor.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Testing') {
            steps {
                sh 'node index.js'
            }
        }

        stage('Build') {
            steps {
                sh 'docker build -t timezone-app .'
            }
        }

        stage ('deploy'){
            steps {
                sh 'docker run -p 3000:3000 timezone-converter'
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
