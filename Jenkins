pipeline {
    agent my-jenkins-learning

    environment {
        APP_NAME = "timezone-app"
        PORT = "3000"
    }

    stages {
        stage('Clone from GitHub') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/gufran-17/TimeZone-convertor.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run App for Testing') {
            steps {
                sh 'node index.js & sleep 5' // Run in background for test
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t $APP_NAME ."
            }
        }

        stage('Run Docker Container') {
            steps {
                sh """
                # Stop existing container if running
                if [ \$(docker ps -q -f name=$APP_NAME) ]; then
                    docker stop $APP_NAME
                    docker rm $APP_NAME
                fi

                # Run container with port mapping
                docker run -d -p $PORT:$PORT --name $APP_NAME $APP_NAME
                """
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully! App running on port $PORT"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
